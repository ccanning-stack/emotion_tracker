<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insightful Emotions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <main>
    <h1 id="reg-form">Registration Form</h1>

    <% if (validationErrorsArray) { %>
    <% const displayedMsgs = {}; %>
    <% validationErrorsArray.errors.forEach(error => { %>
        <% if (!displayedMsgs[error.msg]) { %>
        <div class="error-msg">
            <%= error.msg %>
        </div>
       <% displayedMsgs[error.msg] = true %>
    <% }}); %>
    <% } %>
    
    <% if (emailExistsMsg){ %>
    <div id="email_exists_msg" class="container"><%= emailExistsMsg %></div>
    <% } %>

    <form action="/new-user" method="post">

        <p>

            <label for="firstname-input">First name</label>

        </p>

        <div class="container">

            <input type="text" name="first_name" placeholder="Enter First Name" 
            id="firstname-input" required>

        </div>

        <p>

            <label for="surname_input">Surname</label>

        </p>

        <div class="container">

            <input type="text" name="surname" placeholder="Enter Surname" 
            id="surname-input" required>

        </div>

        <p>

            <label for="email-input">E-mail Address</label>

        </p>

        <div class="container">

            <input type="email" name="email_add" placeholder="user@example.com" id="email-input" required>

        </div>

        <p>

            <label for="birthdate-input">Date of Birth</label>

        </p>

        <div class="container">

            <input type="date" name="birthdate" id="birthdate-input" 
             max="2008-03-01" min="1910-03-01"required value="2000-01-01">

        </div>

        <p>

            <label for="sec-q1-input">Security Question 1</label>

        </p>

        <div class="container">

            <input type="text" name="security_qtn_1" placeholder="Example:  Name of First School" 
            id="sec-q1-input" required>

        </div>

        <p>

            <label for="sec-a1-input">Secret Answer</label>

        </p>

        <div class="container">

            <input type="text" name="security_ans_1" placeholder="Enter answer" id="sec-a1-input"
            required>

        </div>

        <p>

            <label for="sec-q2-input">Security Question 2</label>

        </p>

        <div class="container">

            <input type="text" name="security_qtn_2" placeholder="Example:  Name of First Employer" id="sec-q2-input"
            required>

        </div>

        <p>

            <label for="sec-a2-input">Secret Answer</label>

        </p>

        <div class="container">

            <input type="text" name="security_ans_2" placeholder="Enter answer" id="sec-a2-input"
            required>

        </div>

        <p>

            <label for="password-input">Choose Password</label>

        </p>

        <div class="container">

            <input type="password" name="initial_password" placeholder="Enter Password" id="password-input"
            required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
            title="Must contain at least one number,one uppercase letter, one lowercase letter, 
            and at least 8 or more characters" onkeyup="check()" maxlength="20">

        </div>

        <p>

            <label for="passconfirm-input">Confirm Password</label>

        </p>

        <div class="container">
           

            <input type="password" name="password_confirmation" placeholder="Re-enter Password" id="passconfirm-input"
            required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
            title="Must contain at least one number,one uppercase letter, one lowercase letter, 
            and at least 8 or more characters" onkeyup="check()" maxlength="20">
            <span id='match_message'></span>

        </div>
 

        <button type="submit" id="submit-btn">Submit</button>

    </form>

    </main>
    <script src="/js/register.js"></script>
</body>
</html>