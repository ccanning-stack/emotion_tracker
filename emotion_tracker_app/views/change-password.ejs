<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insightful Emotions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <h1>Change Password</h1>

    <% if (validationErrorsArray) { %>
        <% const displayedMsgs = {}; %>
        <% validationErrorsArray.errors.forEach(error => { %>
            <% if (!displayedMsgs[error.msg]) { %>
            <div class="error-msg">
                <%= error.msg %>
            </div>
           <% displayedMsgs[error.msg] = true %>
        <% }}); %>
        <% } %>

 
    <form action="/change-password" method="post">

        <% if (!apiData === null) { %>
        <input type="hidden" name="user_changing_pwd" value="<%= apiData.user_id %>">
        <% } %>

        <p>

            <label for="password-input">Choose Password</label>

        </p>

        <div>

            <input type="password" name="pwd_change_1" placeholder="Enter Password" id="password-change-1"
            required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
            title="Must contain at least one number,one uppercase letter, one lowercase letter, 
            and at least 8 or more characters" onkeyup="check2()" maxlength="20">

        </div>

        <p>

            <label for="passconfirm-input">Confirm Password</label>

        </p>

        <div>

            <input type="password" name="pwd_change_2" placeholder="Re-enter Password" id="password-change-2"
            required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
            title="Must contain at least one number,one uppercase letter, one lowercase letter, 
            and at least 8 or more characters" onkeyup="check2()" maxlength="20">
            <span id='match_message'></span>

        </div>

        <button type="submit">Submit</button>

    </form>

    <script src="/js/change-password.js"></script>
</body>
